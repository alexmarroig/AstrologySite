      "Profile": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string"
          },
          "foto": {
            "type": "string"
          },
          "formacao": {
            "type": "string"
          },
          "experiencia": {
            "type": "string"
          },
          "biografia": {
            "type": "string"
          },
          "citacao": {
            "type": "string"
          },
          "contato": {
            "$ref": "#/components/schemas/Contato"
          },
          "redes_sociais": {
            "$ref": "#/components/schemas/RedesSociais"
          },
          "beneficios": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "faq": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FAQItem"
            }
          }
        }
      },
      "PostSummary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "titulo": {
            "type": "string"
          },
          "resumo": {
            "type": "string"
          },
          "imagem": {
            "type": "string"
          },
          "autor": {
            "type": "string"
          },
          "data_publicacao": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "Post": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/PostSummary"
          },
          {
            "type": "object",
            "properties": {
              "conteudo": {
                "type": "string"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        ]
      },
      "Stats": {
        "type": "object",
        "properties": {
          "interpretacoes_realizadas": {
            "type": "integer"
          },
          "mapas_gerados": {
            "type": "integer"
          },
          "satisfacao_media": {
            "type": "number"
          },
          "avaliacoes": {
            "type": "integer"
          }
        }
      },
      "ContentServiceFaqItem": {
